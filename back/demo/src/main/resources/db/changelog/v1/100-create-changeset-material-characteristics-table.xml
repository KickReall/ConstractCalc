<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create-material-characteristics-table" author="barakovskaya_elena">
        <createTable tableName="material_characteristics" remarks="Характеристика материалов">
            <column name="id" type="int" autoIncrement="true" remarks="ID Характеристика материала">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar" remarks="Название">
                <constraints nullable="false"/>
            </column>
            <column name="measurement_unit_id" type="int" remarks="ID Единицы измерения">
                <constraints unique="true" nullable="false"
                             foreignKeyName="material-characteristics-measurement-unit-id-measurement-units-id"
                             references="measurement_units(id)"/>
            </column>
            <column name="materials_id" type="int" remarks="ID Материала">
                <constraints unique="true" nullable="false"
                             foreignKeyName="material-characteristics-materials-id-materials-id"
                             references="materials(id)"/>
            </column>
            <column name="length" type="float" remarks="Длина"/>
            <column name="width" type="float" remarks="Ширина"/>
            <column name="thickness" type="float" remarks="Толщина"/>
            <column name="volume" type="float" remarks="Объем"/>
        </createTable>
    </changeSet>
</databaseChangeLog>