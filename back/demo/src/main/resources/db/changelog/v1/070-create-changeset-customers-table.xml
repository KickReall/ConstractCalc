<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create-customers-table" author="barakovskaya_elena">
        <createTable tableName="customers" remarks="Заказчики">
            <column name="id" type="int" autoIncrement="true" remarks="ID заказчика">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="last_name" type="varchar" remarks="Фамилия">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar" remarks="Имя">
                <constraints nullable="false"/>
            </column>
            <column name="second_name" type="varchar" remarks="Отчество">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(11)" remarks="Номер телефона">
                <constraints nullable="false"/>
            </column>
            <column name="e-mail" type="varchar" remarks="Почта e-mail">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="varchar" remarks="Адрес">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int" remarks="ID связанного с клиентом сотрудника">
                <constraints foreignKeyName="customers-user-id-user-id"
                             references="users(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>