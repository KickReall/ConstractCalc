<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
<changeSet id="create-materials-table" author="barakovskaya_elena">
    <createTable tableName="materials" remarks="Материалы">
        <column name="id" type="int" autoIncrement="true" remarks="ID Материалы">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="name" type="varchar" remarks="Название">
            <constraints nullable="false"/>
        </column>
        <column name="material_type" type="varchar" remarks="Тип материала"/>
        <column name="structural_element_type" type="varchar" remarks="Тип конструктивного элемента"/>
    </createTable>
</changeSet>
</databaseChangeLog>