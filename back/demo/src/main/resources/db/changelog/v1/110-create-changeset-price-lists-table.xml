<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create-price-lists-table" author="barakovskaya_elena">
        <createTable tableName="price_lists" remarks="Прайс-листы">
            <column name="id" type="int" autoIncrement="true" remarks="ID прайс-листа">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="material_characteristics_id" type="int" remarks="ID характеристики материала">
                <constraints nullable="false"
                             foreignKeyName="price-lists-material-characteristics-id-material-characteristics-id"
                             references="material_characteristics(id)"/>
            </column>
            <column name="date" type="datetime" remarks="Дата">
                <constraints nullable="false"/>
            </column>
            <column name="purchase_price" type="float" remarks="Цена закупки">
                <constraints nullable="false"/>
            </column>
            <column name="selling_price" type="float" remarks="Цена продажи">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>