<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create-users-table" author="barakovskaya_elena">
        <createTable tableName="users" remarks="Пользователи">
            <column name="id" type="int" autoIncrement="true" remarks="ID пользователя">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="last_name" type="varchar" remarks="Фамилия">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar" remarks="Имя">
                <constraints nullable="false"/>
            </column>
            <column name="second_name" type="varchar" remarks="Отчество">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(11)" remarks="Номер телефона">
                <constraints nullable="false"/>
            </column>
            <column name="e-mail" type="varchar" remarks="Почта e-mail">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar" remarks="Пароль">
                <constraints nullable="false"/>
            </column>
            <column name="login" type="varchar" remarks="Логин">
                <constraints nullable="false"/>
            </column>
            <column name="state_id" type="int" defaultValue="1" remarks="Статус пользователя">
                <constraints nullable="false"
                             foreignKeyName="users-state-id-state-id"
                             references="users_state(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>